<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scheduleapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectedDayPage"
            android:theme="@style/noTitleDialogRound"></activity>
        <activity android:name=".GroupSchedulePage" />
        <activity
            android:name=".MemberActivity"
            android:theme="@style/noTitleDialog" />
        <activity android:name=".InvitePage" />
        <activity
            android:name=".CreateGroupPage"
            android:theme="@style/noTitleDialogRound" />
        <activity
            android:name=".AddFriendPage"
            android:label="친구 찾기"
            android:theme="@style/noTitleDialog" />
        <activity android:name=".SocialPage" />
        <activity
            android:name=".SInputPage"
            android:theme="@style/noTitleDialogRound" />
        <activity
            android:name=".WithdrawPage"
            android:label="탈퇴하기"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ChangePwPage"
            android:label="비밀번호 변경"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".MenuPage" />
        <activity
            android:name=".FindPage"
            android:theme="@style/noTitleDialogRound" />
        <activity android:name=".LoginPage" />
        <activity android:name=".JoinPage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>