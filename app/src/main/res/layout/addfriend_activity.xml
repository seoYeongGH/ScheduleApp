<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="17dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context=".AddFriendPage">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="친구 찾기"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="찾으려는 친구의 이름과 ID를 입력해주세요."
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtWarn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 모든 항목을 입력해주세요."
        android:textColor="#B90000"
        android:textSize="0sp" />

    <TextView
        android:id="@+id/txtWarnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 본인의 ID는 검색할 수 없습니다 :)"
        android:textColor="#B90000"
        android:textSize="0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="이름"
                android:textColor="#1F1F1F"
                android:textSize="19sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="right"
                android:text="ID"
                android:textColor="#1F1F1F"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/iptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/whitelayout"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="7dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:textColor="#1F1F1F"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/iptId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/whitelayout"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="7dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="#1F1F1F"
                android:textSize="19sp" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtWarnExist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:text="이미 친구입니다 :)"
        android:textColor="#B90000"
        android:textSize="0sp" />

    <LinearLayout
        android:id="@+id/layoutFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="@drawable/black_border"
            android:onClick="onBtnAddClicked"
            android:text="추가"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_black"
            android:onClick="onBtnCancelClicked"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnFind"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_black"
            android:onClick="onBtnFindClicked"
            android:text="Find"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>